<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-exchange-alt"></i> Change Password
            </h1>
            <br>
            <h5>Please change your password upon first login</h5>
            <br>
            <%- include('./partials/messages.ejs'); %>
            <form action="/users/first_login" method="POST">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Change Password
                </button>
            </form>
            <p class="lead mt-4"><a href="/exLandingPage">Skip</a></p>
        </div>
    </div>
</div>