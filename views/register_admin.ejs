                    </div>
                    <% if(LoginUser.email!="mobiusnyp@gmail.com" ){ %>
                        <div class="form-group">
                            <label for="school">School</label>
                            <input type="text" id="school" name="school" class="form-control" value=<%=LoginUser.school
                                %> readonly />
                        </div>
                        <% } %>
